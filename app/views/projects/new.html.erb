<div class="content">
  <div class="container-fluid">
   <div class="row">

         <div class="col-lg-12">
                        <div class="card">
                            <div class="header">
                                <h4 class="title">Create Your Project</h4>
                            </div>
                            <div class="content">
                              
                                
                                <%= form_for  @project , :url => { :action => "create"} do |f| %>
                                <div class="row">
                                    <div class= "col-md-5">
                                        <div class= "form-group">
                                            <label> Project Name</label>
                                            <%= f.text_field(:repo_name ,  placeholder: "App Name" , class: "form-control border-input") %>
                                        </div>
                                    </div>
                                    
                                <div class="col-md-5">
                                            <div class="form-group">
                                                <label>Project Description</label>
                                                 <%= f.text_field(:repo_description , placeholder: "How  would you use your product?" , class: "form-control border-input") %>
                                             
                                            </div>
                                        </div>
                                </div>
                                </div>
                                <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                               <label>Project Solution</label>
                                                <%= f.text_area(:project_solution_to_problem, placeholder: "What problem will your product help solve?", rows: 5  , cols: 5, class:  "form-control border-input") %>
                                            </div>
                                        </div>
                                        
                                            
                                        </div>
                                        <div class="row">
                                        <div class="col-md-12">
                                           <div class="form-group">
                                                 <label>Project Expectation</label>
                                                 <%= f.text_area(:project_expectation, placeholder: "What do you expect from it?", rows: 5 , cols: 5 , class: "form-control border-input" ) %>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                            <div class="col-md-12">
                                                <div class="text-center">
                                             <%= f.submit 'Create Project', class: 'btn btn-info btn-fill btn-wd' %>
                                            
                                        </div>
                                        <div class="clearfix"></div>
                                        </div>
                                    </div>
                                    
                                    </div>
                                    
                                    
                                    
                                     
                                    
                                <% end %>
                       </div>
                       </div> 
                       </div>