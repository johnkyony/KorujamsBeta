       <div class="content">
            <div class="container-fluid">

                    <div class="col-lg-12 ">
                           <div class="card">
                            <div class="header">
                                <h4 class="title">Feature</h4>
                            </div>
                            <div class="content">
                                <ul class="list-unstyled team-members">
                                     <% @project_milestones.each do |milestone| %>
                                         <li>
                                                <div class="row">
                                                    <div class="col-xs-3">
                                                        <% if ! milestone.avatar_url.blank? %>
                                                             <img src="<%= milestone.avatar_url %>" alt="Circle Image" class="img-circle img-no-padding img-responsive">
                                                            <%else %>
                                                                <img src="/paper-dashboard/assets/img/faces/face-0.jpg" alt="Circle Image" class="img-circle img-no-padding img-responsive">
                                                            <%end %>
                                                    </div>
                                                    <div class="col-xs-6">
                                                         <h4 class="title"><%= milestone.title %></h4>
                                                        
                                                        <br />
                                                        <p class="description text-center">
                                                            <%= milestone.description %>
                                                        </p>
                                                        
                                                        
                                                        <span class="text-muted"><small>View description</small></span>
                                                    </div>
                                                    <% if milestone.state == "Open" %>
                                                    <div class="col-xs-3 text-right">
                                                        <btn class="btn btn-sm btn-success btn-icon"><i class="fa fa-times"></i></btn>
                                                    </div>
                                                    <% else %>
                                                     <div class="col-xs-3 text-right">
                                                        <btn class="btn btn-sm btn-success btn-icon"><i class="fa  fa-check"></i></btn>
                                                    </div>
                                                    <% end %>
                                                    
                                                </div>
                                            </li>
                                     <% end %>
                                            
                                            
                                        </ul>
                                       
                                        <div class="text-center">
                                         
                                        <a href="/projects/<%= @project.id %>/project_milestones/new" class="btn btn-info btn-fill btn-wd">Create New Feature</a>
                                        <%= payment_service_for 5, Rails.configuration.offsite_payments['payfast']['login'], amount: 50, service: :pay_fast do |service| %>

                    <% service.item_name 'A fake test product' %>
                    <% service.currency 'ZAR' %>
                    <% service.return_url 'http://korujamswebdevelopment-jkyony.c9users.io:8080/pay_fast/success' %>
                    <% service.cancel_url 'http://korujamswebdevelopment-jkyony.c9users.io:8080/pay_fast/cancel' %>
                    <% service.notify_url 'http://korujamswebdevelopment-jkyony.c9users.io:8080/pay_fast/paid' %>
                
                    <%# service.notify_url url_for(:only_path => false, :action => 'notify') %>
                    <%# service.return_url url_for(:only_path => false, :action => 'done') %>
                    <%# service.cancel_return_url 'http://mystore.com' %>
                
                    <% service.merchant_id  Rails.configuration.offsite_payments['payfast']['merchant_id'].to_i%> 
                    <% service.merchant_key Rails.configuration.offsite_payments['payfast']['merchant_key'] %>
                
                    <%= submit_tag "Pay!", class: 'btn btn-info btn-fill btn-wd'%>
                              <% end %>
                                    </div>
                                    <div class="clearfix"></div>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>                  
 